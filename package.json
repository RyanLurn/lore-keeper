{
  "name": "lore-keeper",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "bunx --bun vite build",
    "lint": "bunx --bun eslint . --cache",
    "lint:fix": "bunx --bun eslint . --cache --fix",
    "format": "bunx --bun prettier . --write --cache",
    "format:check": "bunx --bun prettier . --check --cache",
    "check:local": "bun run lint:fix && bun run format",
    "check:ci": "bun run lint && bun run format:check",
    "preview": "bunx --bun vite preview",
    "convex:dev": "bun run --bun convex dev",
    "convex:once": "bun run --bun convex dev --once"
  },
  "dependencies": {
    "@ai-sdk/groq": "^2.0.13",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@t3-oss/env-core": "^0.13.8",
    "@tailwindcss/vite": "^4.1.12",
    "ai": "^5.0.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.25.4",
    "lucide-react": "^0.540.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-scan": "^0.4.3",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12",
    "use-stick-to-bottom": "^1.1.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bun": "^1.2.20",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "pretty-quick": "^4.2.2",
    "simple-git-hooks": "^2.13.1",
    "tw-animate-css": "^1.3.7",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.3"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "esbuild",
    "simple-git-hooks"
  ]
}
